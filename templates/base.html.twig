<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="https://bootswatch.com/4/spacelab/bootstrap.min.css">
			<link rel="stylesheet" href="../../style.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
		{% endblock %}
	</head>
	<body>
		{% block navbar %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<a class="navbar-brand" href="{{path('app_login')}}">Admin</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor02">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{path('user_index')}}">Utilisateurs</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('playlist_index')}}">Playlists</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('song_index')}}">Songs</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('tag_index')}}">Tags</a>
						</li>
					</ul>
					<form class="form-inline my-2 my-lg-0">
						<input class="form-control mr-sm-2" type="text" placeholder="Search">
						<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
					</form>
				</div>
			</nav>

		{% endblock %}
		<div class="container mb-3"> {% block body %}{% endblock %}
			</div>
			{% block javascripts %}{% endblock %}
		</body>
	</html>
