{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>Utilisateurs
		<a class="ml-2" href="{{ path('user_edit', {'id': user.id}) }}">
			<i class="fas fa-edit"></i>
		</a>
	</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ user.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ user.description }}</td>
			</tr>
			<tr>
				<th>ProfilePicture</th>
				<td><img class="rounded-circle" src="{{ user.profilePicture }}" alt="photo de profile de {{ user.name }}"></td>
			</tr>
			<tr>
				<th>Playlists</th>
				<td>
					{% for playlist in user.playlists %}

						<p>
							<i class="fas fa-compact-disc fa-spin mr-3 fa-lg"></i>
							{{playlist.title}}</p>
					{% else %}
						<i class="fa fas-cross badge-danger badge"></i>
						L'utilisateur n'a pas de playlist
						<i class="fa fas-cross badge-danger badge"></i>

					{% endfor %}

				</td>
			</tr>
		</tbody>
	</table>

	<div class="row">

		<div class="col-6">{{ include('user/_delete_form.html.twig') }}</div>
		<div class="col-6">
			<a class="btn btn-secondary float-right" href="{{ path('user_index') }}">Retour</a>
		</div>
	</div>


{% endblock %}
