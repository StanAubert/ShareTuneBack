{% extends 'base.html.twig' %}

{% block title %}Tag index
{% endblock %}

{% block body %}
	<h1>Tag index</h1>
	<a class="btn btn-success" href="{{ path('tag_new') }}">
		<i class="fas fa-plus"></i>
		Ajouter</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for tag in tags %}
				<tr>
					<td>{{ tag.id }}</td>
					<td>{{ tag.title }}</td>
					<td>
						<a class="btn btn-success" href="{{ path('tag_show', {'id': tag.id}) }}">
							<i class="fas fa-eye"></i>
						</a>
						<a class="btn btn-info" href="{{ path('tag_edit', {'id': tag.id}) }}">
							<i class="fas fa-edit"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Pas de tags trouv√©</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
